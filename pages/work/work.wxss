/* 推荐 */
page{
  font-family: "微软雅黑";
}
.dp-recommend{
  width:100%;
  margin-top:20rpx;
  padding:20rpx;
  overflow:auto;  
}
.dp-recommend text{
  color:#333;
}
.dp-recommend text:nth-child(1){
  padding-left:20rpx;
  font-size: 36rpx;
}
.dp-recommend text:nth-child(2){
  padding-right:20rpx;
  font-size: 35rpx;
}
.dp-recommend-detail{
  padding:0 40rpx 10rpx;
  border-top:2px solid #ddd;
  position: relative;
}
.dp-recommend-top{
  border-bottom:1px dotted #DEDEDE;
  overflow:auto;
  padding:20rpx 0;
  width: 80%;
}
.dp-recommend-bottom{
  padding:20rpx 0;
}
.dp-recommend-bottom text:nth-child(1){
  flex:1;
}
.dp-recommend-bottom text:nth-child(2){
  flex:3;
}
/*筛选  */
.shaixuan{
  display: flex;
  height: 80rpx;
  position: fixed;
  z-index: 333;
  width: 100%;
  top: 0;
}
.shaixuan view{
  flex: 1;
  height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  line-height: 80rpx;
  border-right: 2px solid #DEDEDE;
}
.shaixuan view image{
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}
.shaixuanWrap{
  position: fixed;
  z-index: 222;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0,.4);
}
.shaixuanList{
  position: relative;
  z-index: 333;
  opacity: 1;
  background: #fff;
  padding: 20rpx 0;
  font-size: 28rpx;
  text-align: center;
  color: #aaa;
}
.shaixuanItem{
  width: 21.5%;
  height: 64rpx;
  line-height: 64rpx;
  margin: 20rpx 1%;
  float: left;
  border: 2px solid #aaa;
  border-radius: 12rpx;
  overflow: hidden;
}
.active{
  color: #3FA8E1;
}
